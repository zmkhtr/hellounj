<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:gravity="center"
    android:id="@+id/layoutListCategory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.sahabatpnj.hellounj.SquareImageView
        android:id="@+id/imageHomeGambar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/categoryImg"
        android:src="@drawable/hellounj"
        android:background="#41cac3c3"/>

    <TextView
        android:id="@+id/textHomeJudul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:text="@string/category"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="#49000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

</RelativeLayout>
